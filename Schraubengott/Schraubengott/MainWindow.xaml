                        <Label x:Name="gewtyplabel1" Content="-----" HorizontalAlignment="Left" Margin="78,319,0,0" VerticalAlignment="Top" Width="40"/>
                        <Label x:Name="Re1" Content="-----" HorizontalAlignment="Left" Margin="172,91,0,0" VerticalAlignment="Top" Width="40"/>
                        <Label x:Name="Rm1" Content="-----" HorizontalAlignment="Left" Margin="172,122,0,0" VerticalAlignment="Top" Width="40"/>
                        <Label x:Name="sweitelabel1" Content="-----" HorizontalAlignment="Left" Margin="172,153,0,0" VerticalAlignment="Top" Width="40"/>
                        <Label x:Name="masselabel1" Content="-----" HorizontalAlignment="Left" Margin="172,187,0,0" VerticalAlignment="Top" Width="40"/>
                        <Label x:Name="gesamtlabel1" Content="-----" HorizontalAlignment="Left" Margin="172,218,0,0" VerticalAlignment="Top" Width="40"/>
                        <Label x:Name="Bemerkung1" Content="-----" HorizontalAlignment="Left" Margin="172,301,0,0" VerticalAlignment="Top" Width="40"/>
                        <Label x:Name="preis1" Content="-----" HorizontalAlignment="Left" Margin="268,59,0,0" VerticalAlignment="Top" Width="40"/>
                        <Label x:Name="einzelpreis1" Content="-----" HorizontalAlignment="Left" Margin="268,91,0,0" VerticalAlignment="Top" Width="40"/>
                        <Label x:Name="Summelabel1" Content="-----" HorizontalAlignment="Left" Margin="268,130,0,0" VerticalAlignment="Top" Width="40"/>
                        <Label x:Name="Stückpreislabel1" Content="-----" HorizontalAlignment="Left" Margin="268,161,0,0" VerticalAlignment="Top" Width="40"/>
                        <DataGrid  x:Name="schrauben" HorizontalAlignment="Left" Height="310" Margin="123,56,0,0" VerticalAlignment="Top" Width="503" SelectionChanged="DataGrid_SelectionChanged" Loaded="schrauben_Loaded">
