                    </ComboBox>

                    <Label Content="Schraubenlänge:" HorizontalAlignment="Left" Height="30" Margin="13,185,0,0" VerticalAlignment="Top" Width="113" Grid.ColumnSpan="2"/>
                    <Label Content="Gewindelänge:" HorizontalAlignment="Left" Height="30" Margin="13,220,0,0" VerticalAlignment="Top" Width="113" Grid.ColumnSpan="2"/>
                    <Label Content="mm" HorizontalAlignment="Left" Height="30" Margin="87,185,0,0" VerticalAlignment="Top" Width="39" RenderTransformOrigin="1.504,1.219" Grid.Column="2"/>
