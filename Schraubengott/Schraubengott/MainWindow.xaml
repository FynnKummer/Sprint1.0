                    <Label Content="mm" HorizontalAlignment="Left" Height="30" Margin="41,185,0,0" VerticalAlignment="Top" Width="39" RenderTransformOrigin="1.504,1.219" Grid.Column="4" Grid.ColumnSpan="2"/>
