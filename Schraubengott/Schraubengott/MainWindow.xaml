                    <Label Content="mm" HorizontalAlignment="Left" Height="30" Margin="87,220,0,0" VerticalAlignment="Top" Width="39" RenderTransformOrigin="1.504,1.219" Grid.Column="2"/>
                    <Label Content="Menge" HorizontalAlignment="Left" Height="26" Margin="13,255,0,0" VerticalAlignment="Top" Width="113" Grid.ColumnSpan="2"/>
