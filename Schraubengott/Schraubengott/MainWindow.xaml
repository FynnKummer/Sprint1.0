                                <GradientStop Color="#FFFAFCFE"/>
                                <GradientStop Color="#FFDDE0E4" Offset="0.626"/>

                            </RadialGradientBrush>
                        </Grid.Background>
                        <Button Content="Auswahl löschen" HorizontalAlignment="Left" Height="32" Margin="553,349,0,0" VerticalAlignment="Top" Width="156" Click="btndelete4_Click"/>


