                    <Label Content="Kopf:" HorizontalAlignment="Left" Height="30" Margin="13,80,0,0" VerticalAlignment="Top" Width="113" Grid.ColumnSpan="2"/>
                    <ComboBox x:Name="cbkopf" IsEditable="true"
                        IsReadOnly="true" HorizontalAlignment="Left" Margin="36,80,0,0" VerticalAlignment="Top" Width="140" Height="26" Grid.Column="1" Grid.ColumnSpan="2" SelectionChanged="cbkopf_SelectionChanged" >
