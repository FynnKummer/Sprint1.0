                    </Grid>
                </ScrollViewer>


            </TabItem>
            <TabItem x:Name="tab_2" Header="Warenkorb" >
                <ScrollViewer >
                    <Grid x:Name="grid2">
                        <Grid.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="#FFFAFCFE"/>
                                <GradientStop Color="#FFDDE0E4" Offset="0.626"/>

                            </RadialGradientBrush>
                        </Grid.Background>
                        <Label x:Name="preislabel" Content="Label" HorizontalAlignment="Left" Margin="419,173,0,0" VerticalAlignment="Top"/>
                        <Label x:Name="gesamtpreislabel" Content="Label" HorizontalAlignment="Left" Margin="478,106,0,0" VerticalAlignment="Top"/>


